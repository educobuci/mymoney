<div class="index">
	<h2>Accounts</h2>

	<table class="crud">
		<tr>
			<th>Agency</th>
			<th>Bank</th>
			<th>Number</th>
			<th class="action">Action</th>
		</tr>

	<% for account in @accounts %>
		<tr class="<%= cycle("even", "odd") %>" >
			<td><%=h account.agency %></td>
			<td><%=h account.bank %></td>
			<td><%=h account.number %></td>
			<td>
				<%= link_to 'Show', account, :class => 'show' %>
				<%= link_to 'Edit', edit_account_path(account), :class => 'edit' %>
				<%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete, :class => 'destroy	' %>
			</td>
		</tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'New account', new_account_path %>
</div>